      <button class="btn btn-light" type="button" style="margin-right: 80%;"><a href="/managerMenu">BACK</a></button>
      <button class="btn btn-light" type="button" style="width: 10%;"><a href="/addItem">ADD NEW ITEM</a></button>
    </div>
        
        
  </nav>
  


