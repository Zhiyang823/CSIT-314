      </div>
    </div>
  </div>


  <%menuList.forEach(menu => {%>
    <div style="padding-bottom: 1%; padding-bottom: 1%; padding-right: 1%; padding-left: 1%;"></div>
    <div class="row">
          <div class="card" style="width: 50%; margin: auto;">
            <h3 name="itemId"><%= menu.foodName %></h3>
            <p name= "itemPrice">Price: <%= menu.price %></p>
            <form method="post" action="/">
                <input type="submit" name=<%= menu.foodName %> value="Delete from menu" />
            </form>
          </div>
        </div>
      </div>
        <%})%>


  <script src="menupagejs.js"></script>
</body>

</html>