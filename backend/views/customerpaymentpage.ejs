<!DOCTYPE html>
<html lang="en">

<script>

    function random(){
        document.getElementById("randomNumber").innerHTML = Math.floor(Math.random() * 314545836);
    }

</script>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../paymentcss.css">
    <title>Payment</title>
</head>

<body onload="random()">

    <div id="payment-container" style="display:flex;">
        <div id="left-container">
            <button class="btn btn-light" type="button" style="margin-right: 80%;"><a href="/menuPage">BACK</a></button>
            <div id="receiptno">
                <span>Receipt No. </span>
                <p id="randomNumber"></p>
            </div>

            <div id="total-amount">
                <span id="amount">$38.40</span>
                <br>
                <span>Total amount due</span>
            </div>



            <div id="pay-info">Please proceed to the counter for payment</div>
        </div>


        
        <div id="right-container">
            <div class="modal-body">
                
                    <p>Table Number: 3</p>

                
                <div id="order-container">
                    <!-- Test Orders -->
                    <h3>Your Order</h3>
                    <%orderList.forEach(order => {%>
                    <ul>
                        <li><%= order.itemId %> <%= order.itemPrice %></li>
                    </ul>
                    <%})%>
                </div>
                

                <div id="orderinfo">
                    <input type="text" id="couponcode" placeholder="ADD COUPON CODE"><br>
                    <span>Subtotal:</span><br>
                    <span>GST inclusive:</span><br>
                    <span>Total Amount:</span><br>
                </div>

            </div>
        </div>
    </div>




</body>

</html>